<h1>Create a new post</h1>
<div class="row">
	<div class="span6 offset3">
		<%= form_for(@post) do |f| %>

		<%= f.label :user_id, "User:" %>
		<%= f.text_field :user_id, value: "#{current_user.id}", :readonly =>true %>
		<%= f.label :content %>
		<%= f.text_field :content %>

		<%= f.submit "Create my post!", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>
