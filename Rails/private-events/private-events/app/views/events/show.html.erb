<h1>Event Details</h1>
<h4>Date: <%= @event.date %></h4>
<h4>Location: <%= @event.location %></h4>
<h4>Description: <%= @event.description %></h4>

<br />

<% if @event.attendees.any? %>
	<h4>Attendees:</h4>
	<ol>
		<% @event.attendees.each do |i| %>
		<li><%= link_to "#{i.name}", i%></li>
		<% end %>
	</ol>
<% else %>
	<h4>No Attendees</h4>
<% end %>





<h6>Event creater: <%= link_to "#{@creator.name}", @creator %></h6>